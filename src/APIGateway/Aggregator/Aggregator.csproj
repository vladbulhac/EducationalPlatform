<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <UserSecretsId>d67602ec-fb3e-4461-8edd-25d00f682998</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>.</DockerfileContext>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Proto\Common\uuid.proto" />
    <None Remove="Proto\EducationalInstitutionAPI\command_service.proto" />
    <None Remove="Proto\EducationalInstitutionAPI\query_service.proto" />
    <None Remove="Proto\EducationalInstitutionAPI\request_messages.proto" />
    <None Remove="Proto\EducationalInstitutionAPI\response_messages.proto" />
    <None Remove="Proto\EducationalInstitutionAPI\response_messages_data.proto" />
    <None Remove="Proto\EducationalInstitutionAPI\statuscodes.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.17.3" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.38.0" />
    <PackageReference Include="Grpc.Core" Version="2.38.1" />
    <PackageReference Include="Grpc.Net.Client" Version="2.38.0" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.13" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="4.1.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.1.4" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Proto\Common\uuid.proto" GrpcServices="Client" />
    <Protobuf Include="Proto\EducationalInstitutionAPI\command_service.proto" GrpcServices="Client" />
    <Protobuf Include="Proto\EducationalInstitutionAPI\query_service.proto" GrpcServices="Client" />
    <Protobuf Include="Proto\EducationalInstitutionAPI\request_messages.proto" GrpcServices="Client" />
    <Protobuf Include="Proto\EducationalInstitutionAPI\response_messages_data.proto" GrpcServices="Client" />
    <Protobuf Include="Proto\EducationalInstitutionAPI\response_messages.proto" GrpcServices="Client" />
    <Protobuf Include="Proto\Common\status_codes.proto" GrpcServices="Client" />
  </ItemGroup>
</Project>